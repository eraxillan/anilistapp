<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_backdrop_child_container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BackdropFragment"
    android:fitsSystemWindows="false" >

    <name.eraxillan.anilistapp.ui.views.BackdropPanel
        android:id="@+id/fragment_backdrop_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="0dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_backdrop_container"
        app:behavior_skipCollapsed="true"
        app:layout_behavior=".GestureLockedBottomSheetBehavior"
        app:behavior_peekHeight="?attr/actionBarSize"
        android:layout_weight="1"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?actionBarSize"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
